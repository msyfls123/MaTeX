fill()
  position: relative
  width: 100%
  height: 30px
  line-height: @height
.image-selector
  position: absolute
  top: 10px
  right: 25px
  width: 50px
  height: 30px
  .image-input
    fill()
    border: 1px solid #ddd
    font-size: 12px
    text-align: center
    border-radius: 3px
    cursor: pointer
    &:hover
      background: #efefef
    input
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      opacity: 0
  .image-preview
    fill()
    .image
      position: absolute
      top: 0
      right: 0
      max-width: 50px
      max-height: 30px
      z-index: 1
      border: 1px solid #ddd
      &:hover
        max-width: 300px
        max-height: 200px
    .remove
      display: block
      position: absolute
      right: -18px
      top: 8px
      width: 15px
      height: 15px
      border-radius: @width
      line-height: 13px
      font-size: 12px
      cursor: pointer
      text-align: center
      &:hover
        background: red
        color: white

